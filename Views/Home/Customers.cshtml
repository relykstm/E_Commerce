@model E_Commerce.Models.CustomerWrapper;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customers</title>
</head>
<body>
    <a href = "logout">Logout</a>
    <br/>
    <h1><a href="main">Dashboard</a> | <a href="products">Products</a> | <a href="orders">Orders</a> | Customers | <a href="">Settings</a></h1>

    <h2>Add a New Customer:</h2>
    <form asp-controller="Home" asp-action="AddCustomer" method="POST">
        <span asp-validation-for="@Model.Customer.Name"></span>
        <label asp-for="@Model.Customer.Name"></label>
        <input asp-for="@Model.Customer.Name"/>
        <input type="submit" value="Add New Customer"/>
    </form>
    <br>
        <form>
            <input type="text"/>
            <input type = "submit" value = "Filter"/>
        </form>
    <br>
    <table>
        <thead>
            <th>Customer Name</th>
            <th>Created Date</th>
            <th>Actions</th>
        </thead>
        <tbody>
            @foreach(var customer in Model.AllCustomers)
            {
                <tr>
                    <td>@customer.Name</td>
                    <td>@customer.CreatedAt</td>
                    <td><a href="">Remove</a></td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>